---
import Leader from './Leader.astro'
import {type Props as LeaderProps } from './Leader.astro'

interface Props {
	year: string
	leaders: LeaderProps[]
}

const { year, leaders } = Astro.props
---

<li class='flex flex-col gap-4 p-4 justify-center items-center'>
	<header class='flex flex-col gap-4 justify-center items-center'>
		<h2 class='font-semibold text-3xl text-purple-400'>{year}</h2>
	</header>
	<main class='flex flex-row gap-4 p-4 justify-center items-center'>
		{
			leaders.map((leader: LeaderProps) => (
				<Leader {...leader} />
			))
		}
	</main>
</li>
